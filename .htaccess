AddDefaultCharset UTF-8
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Set the base directory for rewrites (root)
    RewriteBase /
    
    # Deny access to sensitive directories (relative to the web root)
    RedirectMatch 403 ^/(app|scheme|console|runtime)/
    
    # Deny access to sensitive files
    <FilesMatch "\.(env|json|xml|log|md|lock|git|ini|bak|sql)$">
        Order allow,deny
        Deny from all
    </FilesMatch>
    
    # Serve favicon (and other explicitly existing files) directly to avoid rewrite loops
    RewriteRule ^favicon\.svg$ - [L]

    # Rewrite all requests to index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L,QSA]
    
    # Prevent directory browsing
    Options -Indexes
</IfModule>
